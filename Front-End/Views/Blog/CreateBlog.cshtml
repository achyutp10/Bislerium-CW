        <form id="blog-form" asp-action="CreateBlog" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="BlogTitle">Blog Title:</label>
                    <input asp-for="BlogTitle" type="text" id="blog-title" name="BlogTitle" required placeholder="Enter the blog title">
                <span asp-validation-for="BlogTitle" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="BlogContent">Blog Content:</label>
                    <input asp-for="BlogContent" id="blog-content" name="BlogContent" required placeholder="Write your blog content here">
                <span asp-validation-for="BlogContent" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label for="ImageFile">Blog Image:</label>
                <input type="file" id="blog-image" name="ImageFile" accept="image/*" required>
                <span asp-validation-for="ImageName" class="text-danger"></span>
                <span class="text-danger" id="image-size-error" style="display:none;">Image size should not be greater than 3MB.</span>
            </div>

            <div class="form-group">
                <label asp-for="User" class="control-label" hidden>User:</label>
                    <input asp-for="User" class="form-control" value="@User.FindFirstValue(ClaimTypes.NameIdentifier)" hidden/>
                <span asp-validation-for="User" class="text-danger"></span>
            </div>

            @* <div class="form-group">
                <label for="blog-date">Blog Date:</label>
                <input type="date" id="blog-date" name="blog-date" required>
            </div> *@
            <div class="form-group">
                <input type="submit" value="Add Blog" class="btn btn-primary" />
            </div>
            
        </form>



