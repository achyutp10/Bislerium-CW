@section Scripts {
    <script>
   document.getElementById('blog-image').addEventListener('change', function() {
        var file = this.files[0];
        if (file.size > 3 * 1024 * 1024) { 
            document.getElementById('image-size-error').style.display = 'block';
            this.value = ''; 
        } else {
            document.getElementById('image-size-error').style.display = 'none';
        }
    });
    </script>
}
